{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Project CARS Car Classes",
  "description": "JSON Representation of multiple Project CARS car classes",
  "definitions": {
    "standardLink": {
      "type": "object",
      "properties": {
        "href": {
          "type": "string",
          "pattern": "^http[s]?://[a-z.]+((/[a-z0-9-]+)+|/)$"
        }
      },
      "additionalProperties": false,
      "required": [
        "href"
      ]
    },
    "class": {
      "type": "object",
      "properties": {
        "_links": {
          "type": "object",
          "properties": {
            "self": {
              "$ref": "#/definitions/standardLink"
            },
            "index": {
              "$ref": "#/definitions/standardLink"
            },
            "pcars:classes": {
              "$ref": "#/definitions/standardLink"
            },
            "pcars:liveries": {
              "$ref": "#/definitions/standardLink"
            },
            "curies": {
              "type": "array",
              "items": {
                "properties": {
                  "href": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "templated": {
                    "type": "boolean"
                  }
                },
                "additionalProperties": false,
                "required": [
                  "href",
                  "name",
                  "templated"
                ]
              }
            }
          },
          "additionalProperties": false,
          "required": [
            "self",
            "index",
            "pcars:classes",
            "curies"
          ]
        },
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "name"
      ]
    }
  },
  "type": "object",
  "properties": {
    "_embedded": {
      "type": "object",
      "properties": {
        "pcars:car": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/class"
          }
        }
      }
    },
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "$ref": "#/definitions/standardLink"
        },
        "index": {
          "$ref": "#/definitions/standardLink"
        },
        "curies": {
          "type": "array",
          "items": {
            "properties": {
              "href": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "templated": {
                "type": "boolean"
              }
            },
            "additionalProperties": false,
            "required": [
              "href",
              "name",
              "templated"
            ]
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "self",
        "index",
        "curies"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "_embedded",
    "_links"
  ]
}