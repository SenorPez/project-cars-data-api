{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Project CARS 2 Car",
  "description": "JSON Representation of a Project CARS 2 Car",
  "definitions": {
    "standardLink": {
      "type": "object",
      "properties": {
        "href": {
          "type": "string",
          "pattern": "^http[s]?://[a-z.]+((/[a-z0-9]+)+|/)$"
        }
      },
      "additionalProperties": false,
      "required": [
        "href"
      ]
    }
  },
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "$ref": "#/definitions/standardLink"
        },
        "index": {
          "$ref": "#/definitions/standardLink"
        },
        "pcars:cars": {
          "$ref": "#/definitions/standardLink"
        },
        "curies": {
          "type": "array",
          "items": {
            "properties": {
              "href": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "templated": {
                "type": "boolean"
              }
            },
            "additionalProperties": false,
            "required": [
              "href",
              "name",
              "templated"
            ]
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "pcars:cars",
        "curies"
      ]
    },
    "dlc": {
      "type": [
        "string",
        "null"
      ]
    },
    "id": {
      "type": "integer"
    },
    "manufacturer": {
      "type": "string"
    },
    "model": {
      "type": "string"
    },
    "verified": {
      "description": "Has car been verified against in-game and telemetry data?",
      "type": "boolean"
    },
    "year": {
      "type": "integer"
    }
  },
  "additionalProperties": false,
  "required": [
    "_links",
    "dlc",
    "id",
    "manufacturer",
    "model",
    "verified",
    "year"
  ]
}