{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Project CARS 2 Track",
  "description": "JSON Representation of multiple Project CARS 2 tracks",
  "definitions": {
    "standardLink": {
      "type": "object",
      "properties": {
        "href": {
          "type": "string",
          "pattern": "^http[s]?://[a-z.]+((/[a-z0-9]+)+|/)$"
        }
      },
      "additionalProperties": false,
      "required": [
        "href"
      ]
    },
    "track2": {
      "type": "object",
      "properties": {
        "_links": {
          "type": "object",
          "properties": {
            "self": {
              "$ref": "#/definitions/standardLink"
            }
          },
          "additionalProperties": false,
          "required": [
            "self"
          ]
        },
        "country": {
          "type": "string"
        },
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "variation": {
          "type": "string"
        },
        "verified": {
          "description": "Has track been verified against in-game and telemetry data?",
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "required": [
        "_links",
        "country",
        "id",
        "name",
        "location",
        "variation",
        "verified"
      ]
    }
  },
  "type": "object",
  "properties": {
    "_embedded": {
      "type": "object",
      "properties" : {
        "pcars:track": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/track2"
          }
        }
      }
    },
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "$ref": "#/definitions/standardLink"
        },
        "index": {
          "$ref": "#/definitions/standardLink"
        },
        "curies": {
          "type": "array",
          "items": {
            "properties": {
              "href": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "templated": {
                "type": "boolean"
              }
            },
            "additionalProperties": false,
            "required": [
              "href",
              "name",
              "templated"
            ]
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "self",
        "index",
        "curies"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "_embedded",
    "_links"
  ]
}