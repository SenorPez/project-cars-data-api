{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Project CARS Event",
  "description": "JSON Representation of a Project CARS single player event",
  "definitions": {
    "standardLink": {
      "type": "object",
      "properties": {
        "href": {
          "type": "string",
          "pattern": "^http[s]?://[a-z.]+((/[a-z0-9-]+)+|/)$"
        }
      },
      "additionalProperties": false,
      "required": [
        "href"
      ]
    }
  },
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "$ref": "#/definitions/standardLink"
        },
        "index": {
          "$ref": "#/definitions/standardLink"
        },
        "pcars:cars": {
          "$ref": "#/definitions/standardLink"
        },
        "pcars:events": {
          "$ref": "#/definitions/standardLink"
        },
        "pcars:rounds": {
          "$ref": "#/definitions/standardLink"
        },
        "curies": {
          "type": "array",
          "items": {
            "properties": {
              "href": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "templated": {
                "type": "boolean"
              }
            },
            "additionalProperties": false,
            "required": [
              "href",
              "name",
              "templated"
            ]
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "self",
        "index",
        "pcars:cars",
        "pcars:events",
        "pcars:rounds",
        "curies"
      ]
    },
    "id": {
      "type": "integer"
    },
    "name": {
      "type": "string"
    },
    "tier": {
      "type": [
        "integer",
        "null"
      ]
    },
    "verified": {
      "type": "boolean"
    }
  },
  "additionalProperties": false,
  "required": [
    "_links",
    "id",
    "name",
    "tier",
    "verified"
  ]
}