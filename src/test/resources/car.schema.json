{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Project CARS Car",
  "description": "JSON Representation of a Project CARS car",
  "definitions": {
    "standardLink": {
      "type": "object",
      "properties": {
        "href": {
          "type": "string",
          "pattern": "^http[s]?://[a-z.]+((/[a-z0-9-]+)+|/)$"
        }
      },
      "additionalProperties": false,
      "required": [
        "href"
      ]
    }
  },
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "oneOf": [
            {
              "$ref": "#/definitions/standardLink"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/standardLink"
              }
            }
          ]
        },
        "index": {
          "$ref": "#/definitions/standardLink"
        },
        "pcars:cars": {
          "$ref": "#/definitions/standardLink"
        },
        "pcars:class": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/standardLink"
          }
        },
        "pcars:liveries": {
          "$ref": "#/definitions/standardLink"
        },
        "curies": {
          "type": "array",
          "items": {
            "properties": {
              "href": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "templated": {
                "type": "boolean"
              }
            },
            "additionalProperties": false,
            "required": [
              "href",
              "name",
              "templated"
            ]
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "self",
        "index",
        "pcars:cars",
        "pcars:class",
        "pcars:liveries",
        "curies"
      ]
    },
    "acceleration": {
      "type": "number"
    },
    "braking": {
      "type": "number"
    },
    "country": {
      "type": "string"
    },
    "dlc": {
      "type": [
        "string",
        "null"
      ]
    },
    "drivetrain": {
      "type": "string"
    },
    "enginePosition": {
      "type": "string"
    },
    "engineType": {
      "type": "string"
    },
    "gears": {
      "type": "integer"
    },
    "horsepower": {
      "type": "integer"
    },
    "id": {
      "type": "integer"
    },
    "manufacturer": {
      "type": "string"
    },
    "model": {
      "type": "string"
    },
    "shifter": {
      "type": "string"
    },
    "shiftPattern": {
      "type": "string"
    },
    "topSpeed": {
      "type": "integer"
    },
    "torque": {
      "type": "integer"
    },
    "weight": {
      "type": "integer"
    },
    "weightBalance": {
      "type": "integer"
    },
    "wheelbase": {
      "type": "number"
    },
    "year": {
      "type": "integer"
    }
  },
  "additionalProperties": false,
  "required": [
    "_links",
    "acceleration",
    "braking",
    "country",
    "dlc",
    "drivetrain",
    "enginePosition",
    "engineType",
    "gears",
    "horsepower",
    "id",
    "manufacturer",
    "model",
    "shifter",
    "shiftPattern",
    "topSpeed",
    "torque",
    "weight",
    "weightBalance",
    "wheelbase",
    "year"
  ]
}