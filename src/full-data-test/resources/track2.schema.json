{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Project CARS 2 Track",
  "description": "JSON Representation of a Project CARS 2 track",
  "definitions": {
    "standardLink": {
      "type": "object",
      "properties": {
        "href": {
          "type": "string",
          "pattern": "^http[s]?://[a-z.]+((/[a-z0-9]+)+|/)$"
        }
      },
      "additionalProperties": false,
      "required": [
        "href"
      ]
    }
  },
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "$ref": "#/definitions/standardLink"
        },
        "index": {
          "$ref": "#/definitions/standardLink"
        },
        "pcars:tracks": {
          "$ref": "#/definitions/standardLink"
        },
        "curies": {
          "type": "array",
          "items": {
            "properties": {
              "href": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "templated": {
                "type": "boolean"
              }
            },
            "additionalProperties": false,
            "requred": [
              "href",
              "name",
              "templated"
            ]
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "self",
        "index",
        "pcars:tracks",
        "curies"
      ]
    },
    "country": {
      "type": "string"
    },
    "id": {
      "type": "integer"
    },
    "name": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "variation": {
      "type": "string"
    },
    "verified": {
      "description": "Has track been verified against in-game and telemetry data?",
      "type": "boolean"
    }
  },
  "additionalProperties": false,
  "required": [
    "_links",
    "country",
    "id",
    "name",
    "location",
    "variation",
    "verified"
  ]
}